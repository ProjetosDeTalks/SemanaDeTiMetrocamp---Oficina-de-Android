<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagemDaLegendaImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/imagem"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/legendaFotoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagemDaLegendaImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#fff"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/textoDaLegendaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:inputType="text" />

    <Button
        android:id="@+id/gerarImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Gerar imagem"
        android:textSize="30sp"
        android:textAllCaps="false" />

</RelativeLayout>